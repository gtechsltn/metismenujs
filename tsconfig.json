{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "stripInternal": true,
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
  },
  "include": ["src/**/*.ts"]
}
